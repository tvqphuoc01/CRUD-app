doctype html
html
    head
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
    body
        .container-fluid.pt-3.pb-3.bg-dark.text-white
            .row
                .col-6
                    .h1 NODEJS CRUD APP
                .col-6.d-flex.align-items-center.justify-content-center
                    .row
                        .col-6
                            a(href="/create") 
                                button.btn.btn-success.pr-5.pl-5 CREATE
                        .col-6
                            a(href="/search/search")
                                button.btn.btn-warning.pr-5.pl-5 SEARCH
        .container.pt-3.pb-3
            table.table.table-striped.table-dark
                thead
                    th(scope="col") ID
                    th(scope="col") USERNAME
                    th(scope="col").d-flex.justify-content-center ACTION
                tbody
                    each val in ID
                        tr
                            th(scope="col")= val.id
                            th(scope="col")= val.username
                            th.container.d-flex.justify-content-center.align-item-center
                                    a(href="/user/" + val.id).pl-3.pr-3
                                        button.btn.btn-primary.pr-5.pl-5 VIEW
                                    a(href="/delete/" + val.id).pl-3.pr-3
                                        button.btn.btn-danger.pr-5.pl-5 DELETE    
                            
                        


        script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
