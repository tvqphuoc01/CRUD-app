doctype html
html
    head
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
    body
        table.table.table-striped.table-dark
                thead
                    tr
                        th(scope="col") ID
                        th(scope="col") USERNAME
                        th(scope="col") EMAIL
                        th(scope="col") PASSWORD
                tbody
                    tr
                        th(scope="col")= user.id
                        th(scope="col")= user.username
                        th(scope="col")= user.email
                        th(scope="col")= user.password
                        th(scope="col").row
                            a(href="/updateUser").pl-3.pr-3.col-6
                                button.btn.btn-success.pr-5.pl-5 EDIT
                            a(href="/delete/" + user.id).pl-3.pr-3.col-6
                                button.btn.btn-danger.pr-5.pl-5 DELETE
        .container.d-flex.justify-content-center
            a(href="/").pt-5.pb-5
                button.btn.btn-danger.pr-5.pl-5 BACK TO MAIN PAGE    
                            
                            
                        


