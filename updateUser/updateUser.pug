doctype html
html
    head
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
    body
        .container
            form(action="../updateUser/updateUser" method="POST").form.mt-5
                .form-group
                    label(for="user") Username
                    input(name="username" type="text" class="form-control" id="Text")
                if checkName == false
                    .form-group
                        .alert.alert-danger Your username already exist!
                .form-group
                    label(for="Email") Email address
                    input(name="email" type="email" class="form-control" id="Email")
                    small(class="form-text text-muted") We'll never share your email with anyone else.
                .form-group
                    label(for="password") Password
                    input(name="password" type="password" class="form-control" id="Password")
                if checkPass == false
                    .form-group
                        .alert.alert-danger you have to enter at least 8 digit!
                .container.d-flex.justify-content-center
                    button(type="submit" class="btn btn-primary").mt-3.mb-3.pr-5.pl-5 Submit
        .container.d-flex.justify-content-center
            a(href="/").pt-5.pb-5
                button.btn.btn-danger.pr-5.pl-5 BACK TO MAIN PAGE   
            

        script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
